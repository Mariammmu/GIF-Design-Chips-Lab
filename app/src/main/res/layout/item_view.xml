<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="12dp">

    <!-- Circular Image with Text Overlay -->
    <FrameLayout
        android:id="@+id/circleContainer"
        android:layout_width="69dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/circleImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/circle" />

    </FrameLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Mobile 1"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/circleContainer"
        app:layout_constraintTop_toTopOf="@id/circleContainer" />

    <!-- Description -->

    <!-- Arrow Image -->

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="small description"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/circleContainer"
        app:layout_constraintTop_toBottomOf="@id/textTitle" />

    <ImageView
        android:id="@+id/arrowImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        app:srcCompat="@android:drawable/arrow_up_float"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/circleContainer"
        app:layout_constraintBottom_toBottomOf="@id/circleContainer" />

    <TextView
        android:id="@+id/txtIcon"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/circleContainer"
        app:layout_constraintEnd_toEndOf="@+id/circleContainer"
        app:layout_constraintStart_toStartOf="@+id/circleContainer"
        app:layout_constraintTop_toTopOf="@+id/circleContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>
